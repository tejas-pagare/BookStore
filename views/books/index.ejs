<% layout("/layouts/biolerplate.ejs") %>

<body>
  <div class="w-full h-full bg-zinc-900 flex justify-center	 items-center gap-10 flex-wrap  m-auto	p-8">

    <% for(book of books){ %>

      <div class="w-60  h-fit	p-3 bg-neutral-900 rounded-lg card">
        <div class="image w-full h-44  bg-zinc-300 rounded-lg overflow-hidden ">
          <img  class="w-full h-full object-centre object-cover	"  src=<%= book.image %> alt="">
        </div>
        <h1 class="text-white font-bold text-lg	mt-2 tracking-tighter "><%= book.title %></h1>
        <h2 class="text-zinc-100 font-medium text-sm mt-2  tracking-tighter	">-Author: <%= book.author %></h2>
        <p class="text-xs text-zinc-200 mt-3 tracking-tighter"><%= book.description %></p>
        <Form method="post" action="/cart/<%= book._id %>">
          
          <button class="bg-blue-500 shadow-lg shadow-blue-500/50  text-white bg-blue-500 px-3 py-1 rounded-md mt-3 hover:bg-blue-700">Buy now</button>
        </Form >
        <a href="/show/<%= book._id %>" class="block text-xs text-blue-400 hover:text-blue-500 mt-2">View more</a>
      </div>

    <%  } %>

    
   
  </div>

  
</body>