<% layout("/layouts/biolerplate.ejs") %>
  <div class="w-full  bg-zinc-900 pb-20 pt-8 ">
    <div class="flex flex-col items-center justify-start h-full gap-8">
      <div class="flex flex-col items-center justify-center">
        <h1 class="text-2xl font-bold text-blue-500">BookStore</h1>
        <p class="text-white text-lg">Welcome to MyBook.com</p>
      </div>
      <div class="flex flex-col items-center justify-center text-white gap-2">
        <div class="w-24 h-24 bg-red-600 rounded-full overflow-hidden">
          <img class="w-full h-full object-cover object-top" src="<%=user.image%>" alt="">
        </div>
        <div class="flex flex-col items-start justify-center gap-1 text-white">
          <h1 class="text-lg"><span class="text-blue-500 font-semibold mx-2">Username:</span>
            <%= user.username %>
          </h1>
          <h1 class="text-lg"><span class="text-blue-500 font-semibold mx-2">Email:</span>
            <%= user.email %>
          </h1>
        </div>

      </div>
    </div>
    <div class="mt-3">
      <div class="flex flex-col gap-2 ">
        <h1 class="text-2xl text-blue-500 font-bold text-center">My Cart</h1>
        <% if (cartBook.length==0){ %>
          <h2 class="text-zinc-500 text-center">Cart is Empty...</h2>
          <% } else {%>
            <div class="mt-2 flex flex-wrap gap-8 items-center justify-center">

              <% for(mybook of cartBook) {%>

                <div
                  class=" w-[50%] flex flex-col lg:flex-row mx-auto items-start md:gap-10   bg-neutral-900 rounded-lg overflow-hidden w-2/12 p-4 ">
                  <div class="w-[90%]  md:w-44 h-48 overflow-hidden rounded-md">
                    <img class="w-full h-full object-cover   bg-gray-400" src="<%=mybook.book.image%>" alt="">
                  </div>
                  <div class="flex flex-col items-start gap-2 md:gap-3">
                    <div class="text-blue-500 tracking-tighter text-sm font-semibold md:text-2xl">
                      <%= mybook.book.title%>
                    </div>
                    <div class="text-zinc-400 tracking-tighter text-sm font-medium">Author: <%= mybook.book.author %>
                    </div>
                    <div class="text-white">Rs.<%=mybook.quantity*mybook.book.price %> </div>

                    <div class="text-zinc-200 tracking-tighter text-sm font-medium">Quantity: <%= mybook.quantity %>
                    </div>
                    <div>
                      <button class="text-white bg-red-500 text-bold rounded-[20px] px-3 py-1">
                        remove
                      </button>
                    </div>

                  </div>
                </div>
                <% } %>
            </div>
            <% } %>
      </div>
    </div>

  </div>