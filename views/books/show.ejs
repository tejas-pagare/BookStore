<% layout("/layouts/biolerplate.ejs") %>

  <body>
    <div class="w-full h-screen bg-zinc-900 flex justify-center	 items-center gap-10  m-auto	p-4">
      <div class="w-64 bg-blue-500 h-96 overflow-hidden rounded-md">
        <img class="object-centre object-cover w-full h-full" src=<%=book.image %> alt="">
      </div>
      <div class="w-1/2  h-96 flex justify-center items-start text-white flex-col ">

        <h1 class="text-6xl tracking-tighter font-bold mb-2">
          <%= book.title %>
        </h1>
        <h3 class="font-medium text-xl mt-2 text-zinc-200">-<%= book.author %>
        </h3>
        <p class="mt-4 text-zinc-100">
          <%= book.description %>.
        </p>
        <h1 class="mt-4 text-xl font-semibold">Price: <%= book.price %>
        </h1>
        <!-- <button class="px-3 py-1 mt-4 rounded-lg bg-blue-500 text-white font-semibold">Add to Cart</button> -->
        <Form method="post" action="/cart/<%= book._id %>">
          
          <button class="px-3 py-1 mt-4 rounded-lg bg-blue-500 text-white font-semibold">Add to Cart</button>
        </Form >

      </div>

    </div>
  </body>