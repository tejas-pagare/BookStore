<% layout("/layouts/biolerplate.ejs") %>
<div class="w-full h-screen bg-zinc-900 text-white flex flex-col justify-center item-center gap-20">
  <%  if (status) { %>
    <h2 class="text-7xl text-blue-600 text-center font-bold text-center">Error: <%= status %></h2>
   
   <% } %>
  <h1 class="text-4xl font-bold text-center"><%= err_msg %></h1>
